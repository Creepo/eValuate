<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".activities.StartScreenPlayerActivity">

    <TextView
        android:id="@+id/textView_Player_Greeting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="@string/welcome_msg"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/button_Quiz_List"
        android:layout_width="256dp"
        android:layout_height="56dp"
        android:layout_centerInParent="true"
        android:backgroundTint="@color/colorBlue"
        android:onClick="goToListOfQuizzes"
        android:text="QUESTIONNAIRES"
        android:textColor="@color/colorWhite" />

    <Button
        android:id="@+id/button_Player_Statistics"
        android:layout_width="256dp"
        android:layout_height="56dp"
        android:layout_below="@id/button_Quiz_List"
        android:layout_centerInParent="true"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/colorBlue"
        android:onClick="goToPlayerStats"
        android:text="MY STATISTICS"
        android:textColor="@color/colorWhite" />

</RelativeLayout>